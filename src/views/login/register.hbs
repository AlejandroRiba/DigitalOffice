<section style="padding: 10vh">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img style="width: fit-content;" src="/img/account.png"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="POST" action="" onsubmit="return validacion_regs()">
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <p class="lead fw-normal mb-0 me-3">Create an account</p>
                    </div>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0"></p>
                    </div>

                    <!-- ID input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="matricula" name="matricula" class="form-control form-control-lg"
                               value="{{formData.matricula}}" placeholder="Enter a valid employee ID" maxlength="10" minlength="10" required oninput="validarMatricula(this)"/>
                        <label class="form-label" for="matricula">Email or employee ID</label><br>
                        <small id="matriculaError" class="text-danger"></small>
                        {{#if error}}
                            <p class="small fw-bold mt-2 pt-1 mb-0" style="color: red">{{error}}</p>
                        {{/if}} 
                    </div>

                    <!-- FIRST NAME input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="fsname" name="fsname" class="form-control form-control-lg"
                            placeholder="Enter your first name" maxlength="62" minlength="2" oninput="validarLetras(this)" required/>
                        <label class="form-label" for="fsname">First name</label>
                    </div>

                    <!-- LAST NAME input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="lsname" name="lsname" class="form-control form-control-lg"
                            placeholder="Enter your last name" maxlength="62" minlength="2" oninput="validarLetras(this)" required/>
                        <label class="form-label" for="lsname">Last name</label>
                    </div>

                    <!-- EMAIL input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="email" name="email" class="form-control form-control-lg"
                            placeholder="Enter a valid email" required oninput="validarCorreo(this)"/>
                        <label class="form-label" for="email">Email</label><br>
                        <small id="emailError" class="text-danger"></small>
                    </div>

                    <!-- CARGO input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="cargo" name="cargo" class="form-control form-control-lg"
                            placeholder="Please enter your current position." maxlength="30" minlength="2" required/>
                        <label class="form-label" for="cargo">Current position</label>
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-3">
                        <input type="password" id="contras" name="contras" class="form-control form-control-lg"
                               placeholder="Enter password" minlength="8" required oninput="validarContra(this)" autocomplete="off"/>
                        <label class="form-label" for="contras">Password</label><br>
                        <small id="psswordError" class="text-danger"></small>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem; background: #06547E;">Register</button>       
                        <p class="small fw-bold mt-2 pt-1 mb-0">Do you already have an account? <a href="/login"
                                                                                                 class="link-danger">Sign in</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
