<body>
    <script type="text/javascript" src="/js/scripts.js"></script>
    <header class="navbar" style="background:#06547E">
      <div class="navbar-brand" style="font-size: 30px"><a href="/" style="text-decoration: none; color: white"><img src="/img/header.png" width="120px" style="padding: 20px; margin-left:20px">Digital Office</a></div><br><br><br>
       <nav class="nav">
            <ul>
              {{#if name}}
                <li class="notification-icon">
                    <a href="#"><i class="fas fa-bell"></i></a>
                  <div class="notification-content">
                    {{#if users.length}}
                      {{#each users}}
                        <a href="/firmar">{{this.matricula}}</a>
                      {{/each}}
                    {{else}}
                      <a href="/">No tienes documentos por firmar.</a>
                    {{/if}}
                  </div>
                </li>
                <span>&nbsp;&nbsp;</span>
                <li class="dropdown">
                      <a class="btn btn-outline-light btn-lg m-2"
                          style="border-width: 2px;"
                          role="button"
                          rel="nofollow"
                          data-mdb-ripple-init>Menu</a>
                      <div class="dropdown-content" aria-labelledby="navbarDropdown">
                          <a href="/uploadf"> * Subir archivo </a>
                          <a href="/firmar"> * Firmar archivo </a>
                      </div>
                </li>
                <span>&nbsp;&nbsp;</span>
                <li><a class="btn btn-lg m-2"
                          style="border-color: rgb(171, 205, 255); border-width: 2px;"
                          href="/logout"
                          role="button"
                          rel="nofollow"
                          data-mdb-ripple-init>Logout</a></li>
                <li> </li>
              {{else}}
                   <li><a class="btn btn-outline-light btn-lg m-2"
                          style="border-width: 2px;"
                          href="/login"
                          role="button"
                          rel="nofollow">Sign in</a></li>
                    <li><a class="btn btn-outline-light btn-lg m-2"
                          style="border-width: 2px;"
                          href="/register"
                          role="button"
                          data-mdb-ripple-init>Sign up</a></li>
                    <li></li>
                {{/if}}
                </ul>
            </nav>
    </header>

    {{{body}}}


